{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "./server/dist",
    "rootDir": ".",
    "noEmit": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "server/**/*",
    "src/lib/strategy/engine.ts",
    "src/lib/strategy/featuresBuilder.ts",
    "src/lib/strategy/scanner.ts",
    "src/lib/strategy/patternDetection.ts",
    "src/lib/strategy/alertProcessor.ts",
    "src/lib/discord/webhook.ts",
    "src/lib/discord/strategyAlerts.ts",
    "src/types/strategy.ts",
    "src/lib/indicators/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "server/dist",
    "src/components",
    "src/hooks",
    "src/stores",
    "src/services",
    "src/App.tsx",
    "src/lib/supabase/**/*",
    "src/lib/strategy/esm/**/*",
    "**/*-old.ts",
    "**/*.backup.ts",
    "**/*.esm.ts"
  ]
}
