# Honey Drip Admin — Example Environment Variables
# Copy to `.env` for server-only or to `.env.local` for local development.
# Client-side vars must be prefixed with VITE_.

# ---------------------
# Client (Vite) — exposed to browser
# ---------------------
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Proxy auth: must match server MASSIVE_PROXY_TOKEN
VITE_MASSIVE_PROXY_TOKEN=

# Feature flags
VITE_USE_UNIFIED_CHAIN=true
# Local dev helpers (optional)
VITE_TEST_AUTO_LOGIN=false
VITE_TEST_FAKE_DB=false

# ---------------------
# Server (Node) — NOT exposed to browser
# ---------------------
# Massive.com
MASSIVE_API_KEY=
MASSIVE_BASE_URL=https://api.massive.com

# Proxy shared secret (must match VITE_MASSIVE_PROXY_TOKEN)
MASSIVE_PROXY_TOKEN=

# CORS/Web origin
WEB_ORIGIN=http://localhost:5173

# Options data provider preference: massive | tradier
OPTIONS_PROVIDER=massive
# Tradier (optional)
TRADIER_ACCESS_TOKEN=
TRADIER_BASE_URL=https://api.tradier.com/v1

# Ports
PORT=8080

# ---------------------
# Testing (optional, used by E2E or local runs)
# ---------------------
TEST_USER_EMAIL=
TEST_USER_PASSWORD=
